@model Projet_Navette.Models.LigneAbonnement

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ligne Abonnement</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_LigneAbonnement)

        <div class="form-group">
            <label class="control-label col-md-2">Client</label>
            <div class="col-md-10">
                @Html.DropDownList("id_Client", null, htmlAttributes: new { @class = "form-control" })
                <select name="cars" id="cars">
                    <option value="volvo">@Model.Client.nom +" "+ @Model.Client.prenom</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                </select>
                @Html.ValidationMessageFor(model => model.id_Client, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Offre</label>
            <div class="col-md-10">
                @Html.DropDownList("id_Offre", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_Offre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
